<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    android:padding="1dp"

    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_top_style_1"

        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >



                <ImageView
                    android:id="@+id/imgThumb"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/loading_small"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="10dp"


                    android:background="#ffffff"
                    android:layout_weight="0.2"
                    android:clickable="true"


                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    >

                    <TextView
                        android:id="@+id/txtText"


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="2"

                        android:text="aaa"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:clickable="true"

                        />

                    <TextView
                        android:id="@+id/txtTextHindi"


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="2"

                        android:visibility="gone"
                        android:text="aaa"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:clickable="true"

                        />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                        <TextView
                            android:id="@+id/txtSubTextMax"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:textColor="#FF0000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="invisible"
                            android:text="bbb" />
                        <TextView
                            android:id="@+id/txtSubText"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"

                            android:textSize="14sp"
                            android:text="bbb" />






                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="0.5"
                            android:visibility="gone"
                            android:layout_gravity="right"
                            android:gravity="right"
                            >





                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_remove"
                            android:clickable="true"
                            android:paddingTop="4dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:id="@+id/remove_qty"

                            android:layout_gravity="right"
                            />

                            <EditText
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="0"
                                android:inputType="number"
                                android:id="@+id/txt_qty"
                                android:textSize="20sp"
                                android:paddingTop="4dp"
                                android:paddingBottom="2dp"
                                android:paddingLeft="2dp"
                                android:paddingRight="4dp"
                                android:gravity="center_horizontal"
                                android:textStyle="bold"


                                />

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_add"
                                android:clickable="true"
                                android:paddingTop="4dp"
                                android:paddingBottom="2dp"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:layout_gravity="right"
                                android:id="@+id/add_qty"

                                />


                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/lytOptionLayout"
                        android:layout_marginTop="10dp"
                        >


                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:background="@color/header"
                            android:textColor="@color/white"
                            android:text="Choose Option"
                            android:textStyle="bold"
                            android:textSize="9sp"
                            android:textAllCaps="true"
                            android:padding="0dp"
                            android:id="@+id/btnChooseOption"
                            android:layout_weight="0.3"
                            android:layout_marginTop="0dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtSelectedOption"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="invisible"
                            android:text="sel"
                            android:layout_weight="0.3"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            >

                        </View>

                    </LinearLayout>


                </LinearLayout>




















    </LinearLayout>

</RelativeLayout>