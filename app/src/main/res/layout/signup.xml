<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/homebg"
    android:padding="20dp"
    >

    <ScrollView
        android:id="@+id/sclDetail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadeScrollbars="true"
        android:visibility="visible" >



        <LinearLayout
            android:id="@+id/lytContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/border"
            android:layout_gravity="center_vertical"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/header"
                android:text="Login"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <ToggleButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggleLoanMitra"
                    android:text="LoanMitra"
                    android:textOff="LoanMitra"
                    android:textOn="Franchise"
                    android:layout_weight="1"
                    android:visibility="gone"
                    ></ToggleButton>

                <Switch
                    android:id="@+id/switchUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left"
                    style="@style/MySwitch"
                    android:visibility="gone"
                    android:checked="true"
                    android:textOff="FRANCHISE"
                    android:textOn="LOANMITRA"/>

            </LinearLayout>


            <EditText
                android:id="@+id/edtName1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/your_name"
                android:visibility="gone"
                android:inputType="textCapWords"
                android:padding="7dp"
                android:textSize="14sp"
                style="@style/MyTextViewStyle"
                >
            </EditText>

            <EditText
                android:id="@+id/edtPhone1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:padding="7dp"
                android:textSize="14sp"
                style="@style/MyTextViewStyle"
                >
            </EditText>




            <EditText
                android:id="@+id/edtPassword1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="4 Digit Pin"
                android:inputType="numberPassword"
                android:padding="7dp"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:maxLength="4"
                style="@style/MyTextViewStyle"

                >
            </EditText>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:id="@+id/userRadioGroup"
                android:layout_weight=".07"
                android:visibility="gone"
                android:checkedButton="@+id/sound" />


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioLoanMitra"
                    android:layout_weight="0.5"
                    android:checked="true"
                    android:visibility="gone"
                    android:text="LoanMitra" />


<!--                <RadioButton-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:id="@+id/radioFranchise"-->
<!--                    android:layout_weight="0.5"-->
<!--                    android:text="Franchise" />-->

<!--            </RadioGroup>-->

            <EditText
                android:id="@+id/edtOtp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Enter OTP"
                android:inputType="number"
                android:padding="7dp"
                android:textSize="14sp"
                style="@style/MyTextViewStyle"
                android:visibility="gone"
                >
            </EditText>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <Button
                android:id="@+id/btnSend1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/mybutton"
                android:text="Sign Up"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="0.33"
                android:textAllCaps="true"
                android:visibility="invisible"

                />
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/mybutton"
                android:text="Login"
                android:textColor="@color/text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="0.33"
                android:layout_marginLeft="10dp"
                android:textAllCaps="true"
                />

                <Button
                    android:id="@+id/btnForgot"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mybutton"
                    android:text="Forgot?"
                    android:textColor="@color/text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="0.34"
                    android:visibility="gone"
                    />




            </LinearLayout>

            <TextView

                android:id="@+id/joinLoanMitra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Join Now"
                android:clickable="true"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/header"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:visibility="gone"

                ></TextView>



            <TextView

                android:id="@+id/linkForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Forgot Pin?"
                android:clickable="true"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/header"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"

                ></TextView>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/prgLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/txtAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/alert"
        android:textSize="14sp"
        android:visibility="gone" />


    <Button
        android:id="@+id/btnGuestLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"
        android:text="Continue as Guest"
        android:textColor="@color/text"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:visibility="gone"

        />


</RelativeLayout>